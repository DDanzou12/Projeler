print("\033[1;32mDoÄŸru!\033[0m")   # YeÅŸil renkli metin
print("\033[1;31mYanlÄ±ÅŸ!\033[0m")   # KÄ±rmÄ±zÄ± renkli metin



import random

sorular = [
    {"soru": "Python hangi yÄ±lda Ã§Ä±kmÄ±ÅŸtÄ±r?", "secenekler": ["1989", "1991", "2000", "2010"], "cevap": "1991"},
    {"soru": "AÅŸaÄŸÄ±dakilerden hangisi Python'da veri tipi deÄŸildir?", "secenekler": ["list", "tuple", "integer", "loop"], "cevap": "loop"},
    {"soru": "print(2 ** 3) Ã§Ä±ktÄ±sÄ± nedir?", "secenekler": ["6", "8", "9", "12"], "cevap": "8"},
    {"soru": "Python'da yorum satÄ±rÄ± nasÄ±l baÅŸlar?", "secenekler": ["//", "/* */", "#", "<!-- -->"], "cevap": "#"},
    {"soru": "len([1,2,3,4]) Ã§Ä±ktÄ±sÄ± nedir?", "secenekler": ["3", "4", "5", "Hata verir"], "cevap": "4"},
    {"soru": "Python hangi programlama paradigmasÄ±nÄ± destekler?", "secenekler": ["Nesne tabanlÄ±", "Fonksiyonel", "Yordamsal", "Hepsi"], "cevap": "Hepsi"},
    {"soru": "Hangisi Python'da mantÄ±ksal operatÃ¶rdÃ¼r?", "secenekler": ["and", "or", "not", "Hepsi"], "cevap": "Hepsi"},
    {"soru": "input() fonksiyonu ne yapar?", "secenekler": ["Ekrana yazÄ± yazar", "KullanÄ±cÄ±dan veri alÄ±r", "ProgramÄ± bitirir", "Liste oluÅŸturur"], "cevap": "KullanÄ±cÄ±dan veri alÄ±r"},
    {"soru": "Python dosya uzantÄ±sÄ± nedir?", "secenekler": [".java", ".py", ".cpp", ".txt"], "cevap": ".py"},
    {"soru": "Python'da '==' ne iÅŸe yarar?", "secenekler": ["Atama yapar", "Mod alÄ±r", "EÅŸit mi kontrol eder", "DÃ¶ngÃ¼ baÅŸlatÄ±r"], "cevap": "EÅŸit mi kontrol eder"}
]

puan = 0
kullanici_cevaplari = []

for soru in sorular:
    print("\n" + soru["soru"])  # Beyaz soru
    secenekler = soru["secenekler"].copy()
    random.shuffle(secenekler)

    harfler = ["A", "B", "C", "D"]
    secenek_haritasi = {harfler[i]: secenek for i, secenek in enumerate(secenekler)}

    for i, secenek in enumerate(secenekler):
        print(f"{harfler[i]}) {secenek}")  # Beyaz seÃ§enekler

    while True:
        cevap = input("CevabÄ±nÄ±z (A/B/C/D): ").strip().upper()
        if cevap in secenek_haritasi:
            kullanici_cevaplari.append(secenek_haritasi[cevap])
            break
        else:
            print("GeÃ§ersiz seÃ§im. LÃ¼tfen A, B, C veya D girin.")

# Test bitti, sonuÃ§larÄ± hesapla
for i, soru in enumerate(sorular):
    if kullanici_cevaplari[i] == soru["cevap"]:
        puan += 10
    else:
        puan -= 5

maks_puan = len(sorular) * 10
basari_yuzdesi = max(0, (puan / maks_puan) * 100)

print("\nğŸ† Quiz Bitti!")
print(f"Toplam PuanÄ±nÄ±z: {puan}/{maks_puan}")
print(f"BaÅŸarÄ± OranÄ±nÄ±z: %{basari_yuzdesi:.0f}")
print("ğŸ‰ Tebrikler, geÃ§tiniz!" if puan >= maks_puan * 0.6 else "ğŸ˜¢ Maalesef, baÅŸarÄ±sÄ±z oldunuz.")

# Cevap anahtarÄ± ve kullanÄ±cÄ± cevaplarÄ±
print("\nCevap AnahtarÄ± ve Senin CevaplarÄ±n:")
for i, soru in enumerate(sorular):
    secenekler = soru["secenekler"]
    dogru_harf = next(harf for harf, sec in zip(["A","B","C","D"], secenekler) if sec == soru["cevap"])
    kullanici_harf = next((harf for harf, sec in zip(["A","B","C","D"], secenekler) if sec == kullanici_cevaplari[i]), None)
    
    # DoÄŸru veya yanlÄ±ÅŸ kontrolÃ¼ ve renk
    if kullanici_cevaplari[i] == soru["cevap"]:
        sonuc = "\033[1;32mDoÄŸru!\033[0m"  # YeÅŸil
    else:
        sonuc = "\033[1;31mYanlÄ±ÅŸ!\033[0m" # KÄ±rmÄ±zÄ±
    
    # Cevap harfleri mavi (Azul)
    dogru_harf_mavi = f"\033[1;34m{dogru_harf}\033[0m"
    kullanici_harf_mavi = f"\033[1;34m{kullanici_harf}\033[0m"
    
    print(f"{i+1}) {sonuc} DoÄŸru: {dogru_harf_mavi}, Senin cevabÄ±n: {kullanici_harf_mavi}")

input("\nProgramÄ± kapatmak iÃ§in Enter tuÅŸuna basÄ±n...")
